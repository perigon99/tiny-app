<%- include('partials/_head') %>
<%- include('partials/_header') %>
<body>
  <main style="margin: 1em;">
    <h3>My URLs</h3>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Short URL</th>
          <th scope="col">Long URL</th>
          <th scope="col">Edit</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>

        <% for(let url in urls) { %>
          <form method="POST" id="form1" action="/urls/<%=url %>/delete">
          <tr>    
              <td><%= url %></td>
              <td><%= urls[url] %></td>
              <td>
                <a href="/urls/<%= url %>"class="btn btn-outline-primary">Edit</a>
              </td>
              <td>
                <button type="submit" value="Submit" form="form1" class="btn btn-outline-danger">Delete</button>
              </td>
          </tr>
          </form>
        <% } %>
      </tbody>
    </table>
  </main>
  <%- include('partials/_footer') %>